/* Demo (index.html) page styling */
body {
 background: #333;
 color: #ddd;
 width: 600px;
 margin: 20px auto;
}
h3 {
 text-align: center;
  margin: 20px auto;
}
.download {
 background: #000;
 color: #ddd;
 text-decoration: none;
 display: block;
 width: 68px;
 padding: 10px;
 float: right;
 border-radius: 1em;
 -moz-border-radius: 1em;
 -webkit-border-radius: 1em;
}
.download:hover {
 background: #555;
}
.clear {
 clear: both;
}

/* JATT (Just Another Tooltip) CSS */
.tooltip, .preview, .screenshot {
 cursor: pointer;
}
#tooltip, #preview, #screenshot {
 color: #dddddd;
 background: #222222;
 border: 1px solid #333333;
 padding: 5px;
 opacity: 0.9;
 filter: alpha(opacity=90);
 text-align: left;
 border-radius: 1em;
 -moz-border-radius: 1em;
 -webkit-border-radius: 1em;
 display: none;
}
